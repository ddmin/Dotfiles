" Powerline-shell
set rtp+=~/.local/lib/python2.7/site-packages/powerline/bindings/vim/
set laststatus=2
set t_Co=256

" Tabs
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent

" Color 
color desert
set background=dark

" Numbers
set number
set relativenumber

" Keybindings
inoremap jk <ESC>
let mapleader = "<Space>"
